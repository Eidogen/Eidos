# 基础配置
ENV=dev
LOG_LEVEL=info

# 数据库配置 (所有服务使用 TimescaleDB 实例以支持超表)
POSTGRES_HOST=timescaledb
POSTGRES_PORT=5432
POSTGRES_USER=eidos
POSTGRES_PASSWORD=eidos123
POSTGRES_DB=eidos

# 数据库连接通用变量
DB_HOST=timescaledb
DB_PORT=5432
DB_USER=eidos
DB_PASSWORD=eidos123
DB_DATABASE=eidos

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_ADDR=redis:6379

# Kafka 配置
KAFKA_BROKERS=kafka:9092
KAFKA_BOOTSTRAP_SERVER=kafka:9092

# Nacos 服务发现配置
NACOS_ENABLED=true
NACOS_SERVER_ADDR=nacos:8848
NACOS_NAMESPACE=eidos-dev

# gRPC 服务地址 (Docker 内部网络)
GRPC_TRADING_ADDR=eidos-trading:50051
GRPC_MATCHING_ADDR=eidos-matching:50052
GRPC_MARKET_ADDR=eidos-market:50053
GRPC_CHAIN_ADDR=eidos-chain:50054
GRPC_RISK_ADDR=eidos-risk:50055
GRPC_JOBS_ADDR=eidos-jobs:50056

# EIP-712 签名配置
EIP712_MOCK_MODE=true

# 节点配置
NODE_ID=1
