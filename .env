# 基础配置
ENV=dev
LOG_LEVEL=info

# 数据库配置 (交易类服务使用统一的 Postgres)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=eidos
POSTGRES_PASSWORD=eidos123
POSTGRES_DB=eidos

# 交易服务通用连接变量
DB_HOST=postgres
DB_PORT=5432
DB_USER=eidos
DB_PASSWORD=eidos123
DB_DATABASE=eidos

# 行情库配置 (时序数据库独立)
MARKET_DB_HOST=timescaledb
MARKET_DB_PORT=5432
MARKET_DB_DATABASE=eidos_market

# Redis 配置
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_ADDR=redis:6379

# Kafka 配置
KAFKA_BROKERS=kafka:9092
KAFKA_BOOTSTRAP_SERVER=kafka:9092

# Nacos 服务发现配置 (Nacos 必须可用)
# 所有服务通过 Nacos 进行服务注册与发现，支持多实例部署和动态扩缩容
NACOS_ENABLED=true
NACOS_SERVER_ADDR=nacos:8848
NACOS_NAMESPACE=eidos
NACOS_GROUP=DEFAULT_GROUP

# EIP-712 签名配置
EIP712_MOCK_MODE=true

# 节点配置
NODE_ID=1
